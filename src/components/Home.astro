---
import { Image } from "astro:assets";
import { getPlaylistsData } from "@services/service.getAllPlaylists";
import { getTracks } from "@services/service.tracks";
import { getGreeting } from "../lib/getGreeting";
import { getCurrentUser } from "@services/service.getCurrentUser";
import CoverPlaylistDefault from "@icons/CoverPlaylistDefault.astro";
import CoverPlaylistDefaultLarge from "@icons/CoverPlaylistDefaultLarge.astro";
import Play from "@icons/PlaySmallIcon.astro";
import PlayLarge from "@icons/PlayLargeIcon.astro";

const hash = Astro.cookies.get("token");
const token = hash.value.substring(1).split("&")[0].split("=")[1];

// Lista de Playlists
const { items } = await getPlaylistsData(token);
const tracks = await getTracks(token);

const playlists = items.map((arrTrack, index) => {
  const track = tracks[index];

  if (track) {
    return { ...arrTrack, arrTrack: track };
  } else {
    return arrTrack;
  }
});

console.log(playlists)

// Obtener la informacion del usuario actual
const user = await getCurrentUser(token);

// getGreeting
const greeting = getGreeting();

// Lista de Playlists recortada
const playlistDataRecomendados = items.slice(0, 6);
---

<Fragment>
  <div class="wrapper">
    <div class="mask__bg"></div>
    <article class="home__pov">
      <h1 class="wave">{greeting}</h1>
      <div class="card__container">
        {
          playlistDataRecomendados.map((playlist) => (
            <Fragment>
              <a class="card" href={`/playlist/${playlist.id}`} data-astro-prefetch="viewport">
                <div class="container__img">
                  {playlist.images[0]?.url !== undefined ? (
                    <picture>
                      <Image
                        src={playlist.images[0]?.url}
                        height="48"
                        width="48"
                        class="playlist__cover"
                        alt={`Cover de portada del playlist ${playlist.name}`}
                      />
                    </picture>
                  ) : (
                    <picture class="container__svg">
                      <CoverPlaylistDefault />
                    </picture>
                  )}
                  <p class="playlist__name hiden__text">{playlist.name}</p>
                </div>
                <div class="button__play">
                  <Play />
                </div>
              </a>
            </Fragment>
          ))
        }
      </div>
    </article>
    <article class="container__grid">
      <h2 class="wave--grid">Hecho para {user.display_name}</h2>
      <article class="container__playlist">
        {
          playlists.map((playlist) => (
            <Fragment>
              <a href={`playlist/${playlist.id}`} class="container__playlist--list" data-astro-prefetch="viewport">
                {playlist.images[0]?.url !== undefined ? (
                  <picture class="content__img">
                    <Image
                      src={playlist.images[0]?.url}
                      height="169"
                      width="169"
                      class="img__playlist"
                      alt={`Cover de portada del playlist ${playlist.name}`}
                    />
                    <div class="button__play--list">
                      <PlayLarge />
                    </div>
                  </picture>
                ) : (
                  <picture class="content__svg">
                    <CoverPlaylistDefaultLarge />
                    <div class="button__play--list pos__bottonplay">
                      <PlayLarge />
                    </div>
                  </picture>
                )}
                <div class="container__info">
                  <h3 class="playlist__name--recomend parraf__hidden">
                    {playlist.name}
                  </h3>
                  <p class="playlist__tracks parraf__hidden--clamp2">
                    {playlist.arrTrack
                      .slice(0, 3)
                      .map((track) => track?.track?.name)}
                  </p>
                </div>
              </a>
            </Fragment>
          ))
        }
      </article>
    </article>
  </div>
</Fragment>

<style>
  :root {
    --background-noise--home: url(data:image/svg+xml;base64,);
    --background-base: #121212;
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    width: 100%;
    padding: 4rem 1.375rem 0.25rem 1.375rem;
    position: relative;
  }

  .mask__bg {
    background-color: rgb(136, 24, 48);
    background-image: -webkit-gradient(linear,left top,left bottom,from(rgba(0,0,0,.6)),to(var(--background-base))),var(--background-noise--home);
    background-image: linear-gradient(rgba(0,0,0,.6) 0,var(--background-base) 100%),var(--background-noise--home);
    height: 332px;
    top: 0;
    right: 0;
    position: absolute;
    -webkit-transition: background 1s ease;
    transition: background 1s ease;
    width: 100%;
    z-index: 0;
  }

  .container__grid {
    display: flex;
    flex-direction: column;
    gap: 1.125rem;
    margin-bottom: 1rem;
    position: relative;
  }

  .container__playlist {
    display: grid;
    /* grid-template-columns: repeat(4,1fr); */
    grid-template-columns: repeat(4, minmax(0, 1fr));
    min-width: 372px;
    grid-template-rows: 17rem;
    grid-auto-rows: 17rem;
    grid-gap: 1.5rem;
    align-items: center;
    grid-area: playlist;
  }

  .wave {
    font-size: 1.95em;
    font-weight: 700;
    letter-spacing: -1px;
  }

  .wave--grid {
    grid-area: title;
    font-size: 1.5em;
    font-weight: 700;
    letter-spacing: -1px;
  }

  .home__pov {
    display: flex;
    flex-direction: column;
    gap: 1.125rem;
    margin-bottom: 2.5rem;
    position: relative;
  }

  .card__container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: 3rem;
    grid-auto-rows: 3rem;
    grid-gap: 0.5rem;
  }

  .card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-radius: 4px;
    background-color: hsla(0, 0%, 100%, 0.1);
    transition: background-color 0.3s ease;
  }

  .card:hover {
    background-color: hsla(0, 0%, 100%, 0.2);
    .button__play {
      display: flex;
    }
  }

  .button__play {
    display: none;
    align-items: center;
    justify-content: center;
    background-color: #1db954;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    margin-right: 0.5rem;
    color: #000;
    box-shadow: 0px 9px 9px -1px rgba(0, 0, 0, 0.42);
    -webkit-box-shadow: 0px 9px 9px -1px rgba(0, 0, 0, 0.42);
    -moz-box-shadow: 0px 9px 9px -1px rgba(0, 0, 0, 0.42);
  }

  .button__play:hover {
    transform: scale(1.06);
    background-color: #1db944;
  }

  .container__img {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    max-width: 10rem;
  }

  .playlist__cover {
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
  }

  .container__svg {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 5px;
    width: 48px;
    height: 48px;
    background-color: #28253f;
    color: #b3b3b3;
  }

  .playlist__name {
    font-weight: 500;
    font-size: 0.9em;
  }

  .hiden__text {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .container__playlist--list {
    display: flex;
    align-items: center;
    flex-direction: column;
    background: #181818;
    border-radius: 8px;
    height: 100%;
    width: 100%;
    transition: background-color 0.3s ease;
  }

  .img__playlist {
    border-radius: 6px;
    display: block;
    position: relative;
  }

  .content__img {
    padding: 1rem 0;
    position: relative;
  }

  .container__info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 0 1rem 1rem 1rem;
    width: 100%;
  }

  .playlist__name--recomend {
    font-size: 1em;
    font-weight: 700;
    color: #fff;
    padding-block-end: 4px;
  }

  .playlist__tracks {
    font-size: 0.875rem;
    color: #a7a7a7;
    font-weight: 400;
  }

  .parraf__hidden {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 100%;
  }

  .parraf__hidden--clamp2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .content__svg {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 1rem 0;
    background-color: #28253f;
    color: #b3b3b3;
    border-radius: 6px;
    width: 10.5625rem;
    height: 10.5625rem;
    position: relative;
  }

  .container__playlist--list:hover {
    background-color: hsla(0, 0%, 100%, 0.1);
    .button__play--list {
      display: flex;
    }
  }

  .button__play--list {
    display: none;
    align-items: center;
    justify-content: center;
    background-color: #1db954;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    margin-right: 0.5rem;
    color: #000;
    box-shadow: 0px 9px 9px -1px rgba(0, 0, 0, 0.42);
    -webkit-box-shadow: 0px 9px 9px -1px rgba(0, 0, 0, 0.42);
    -moz-box-shadow: 0px 9px 9px -1px rgba(0, 0, 0, 0.42);
    position: absolute;
    bottom: 25px;
    right: 0;
  }

  .button__play--list:hover {
    transform: scale(1.06);
    background-color: #1db944;
  }

  .pos__bottonplay {
    bottom: 10px;
    right: 0;
  }
</style>
