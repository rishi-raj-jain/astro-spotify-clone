---
import { getPlaylistsData } from "../services/service.playlist";
import CoverPlaylistDefault from "../icons/CoverPlaylistDefault.astro";
import Play from "../icons/Play.astro";

const hash = Astro.cookies.get("token");
const token = hash.value.substring(1).split("&")[0].split("=")[1];

// Lista de Playlists
const { items } = await getPlaylistsData(token);

// Lista de Playlists recortada
const playlistDataRecomendados = items.slice(0, 6);
---

<Fragment>
  <div class="wrapper">
    <article class="home__pov">
      <h1 class="wave">Â¡Buenas tardes!</h1>
      <div class="card__container">
        {
          playlistDataRecomendados.map((playlist) => (
            <Fragment>
              <a class="card" href="#">
                <div class="container__img">
                  {playlist.images[0]?.url !== undefined ? (
                    <figure>
                      <img
                        src={playlist.images[0]?.url}
                        height="48"
                        width="48"
                        class="playlist__cover"
                      />
                    </figure>
                  ) : (
                    <figure class="container__svg">
                      <CoverPlaylistDefault />
                    </figure>
                  )}
                  <p class="playlist__name hiden__text">{playlist.name}</p>
                </div>
                <div class="button__play">
                  <Play />
                </div>
              </a>
            </Fragment>
          ))
        }
      </div>
    </article>
    <article class="container__grid">
      <h2 class="wave--grid">Hecho para Sebastian</h2>
      <article class="container__playlist">
        {
          items.map((playlist) => (
            <Fragment>
              <figure>
                <img src={playlist.images[0]?.url} height="120" width="120" />
              </figure>
            </Fragment>
          ))
        }
      </article>
    </article>
  </div>
</Fragment>

<style>
  .wrapper {
    display: flex;
    flex-direction: column;
    width: 100%;
    padding: 0.25rem 1.375rem;
  }

  .container__grid {
    display: grid;
    grid-template-areas:
      "title title title "
      "playlist playlist playlist";
    justify-content: center;
    grid-row-gap: 1rem;
  }

  .container__playlist {
    display: grid;
    grid-template-columns: repeat(5, 132px);
    grid-template-rows: repeat(4, 120px);
    grid-column-gap: 3.25rem;
    grid-row-gap: 3.25rem;
    justify-items: center;
    justify-content: center;
    grid-area: playlist;
  }

  .wave {
    font-size: 2em;
    font-weight: 700;
    letter-spacing: -1px;
  }

  .wave--grid {
    grid-area: title;
    font-size: 1.5em;
    font-weight: 700;
    letter-spacing: -1px;
  }

  .home__pov {
    display: flex;
    flex-direction: column;
    gap: 1.125rem;
    margin-bottom: 2.5rem;
  }

  .card__container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: 3rem;
    grid-auto-rows: 3rem;
    grid-gap: 0.5rem;
  }

  .card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-radius: 4px;
    background-color: hsla(0, 0%, 100%, 0.1);
    transition: background-color 0.3s ease;
  }

  .card:hover {
    background-color: hsla(0, 0%, 100%, 0.2);
    .button__play {
      display: flex;
    }
  }

  .button__play {
    display: none;
    align-items: center;
    justify-content: center;
    background-color: #1db954;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    margin-right: 0.5rem;
    color: #000;
    box-shadow: 0px 9px 9px -1px rgba(0, 0, 0, 0.42);
    -webkit-box-shadow: 0px 9px 9px -1px rgba(0, 0, 0, 0.42);
    -moz-box-shadow: 0px 9px 9px -1px rgba(0, 0, 0, 0.42);
  }

  .button__play:hover {
    transform: scale(1.06);
    background-color: #1db944;
  }

  .container__img {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    max-width: 10rem;
  }

  .playlist__cover {
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
  }

  .container__svg {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 5px;
    width: 48px;
    height: 48px;
    background-color: #28253f;
    color: #b3b3b3;
  }

  .playlist__name {
    font-weight: 500;
    font-size: 0.9em;
  }

  .hiden__text {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
